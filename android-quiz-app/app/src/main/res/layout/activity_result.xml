<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionbackground"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ResultActivity">

    <pl.droidsonroids.gif.GifImageView

        android:src="@drawable/gif"
        android:background="@drawable/gif"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="100dp"
        />

        <ImageView
            android:id="@+id/imgHome"
            android:background="@drawable/home"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="28dp"
            />


        <TextView
            android:id="@+id/txtTotalQuestions"
            android:layout_width="wrap_content"
            android:typeface="monospace"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginLeft="85dp"
            android:textSize="17dp"
            android:textColor="#FFFFFF"
            android:text="TOTAL QUESTIONS" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="375dp"
            android:text="1"
            android:textColor="#FFEB3B"
            android:textSize="24dp"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/txtCorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="430dp"
            android:text="CORRECT ANSWERS"
            android:textColor="#ffffff"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="305dp"
            android:layout_marginTop="425dp"
            android:text="2"
            android:textColor="#FFEB3B"
            android:textSize="24dp"
            android:typeface="monospace" />


        <TextView
            android:id="@+id/txtIncorrectAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="85dp"
            android:textSize="17dp"
            android:typeface="monospace"
            android:textColor="#ffffff"
            android:text="INCORRECT ANSWERS" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="475dp"
            android:layout_marginLeft="305dp"
            android:textSize="24dp"
            android:textColor="#FFEB3B"
            android:typeface="monospace"
            android:text="3" />

</RelativeLayout>