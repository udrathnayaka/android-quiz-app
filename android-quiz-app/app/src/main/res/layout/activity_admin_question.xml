<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/questionbackground"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imgbackbutton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="-150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backbtn" />

    <TextView
        android:id="@+id/questionn"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_ui"
        android:gravity="center"
        android:padding="5dp"
        android:text="-------Edit Question-----"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/onee"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_ui"
        android:padding="10dp"
        android:text="Option 1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/twoo"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_ui"
        android:padding="10dp"
        android:text="Option 2"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/threee"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_ui"
        android:padding="10dp"
        android:text="Option 3"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/fourr"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_ui"
        android:padding="10dp"
        android:text="Option 4"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="47dp" />

    <TextView
        android:id="@+id/answerr"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_ui"
        android:padding="10dp"
        android:text="Answer"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="horizontal"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:gravity="center">

       <Button
           android:id="@+id/btnUpdate"
           android:layout_marginTop="10dp"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:textAlignment="center"
           android:background="@drawable/rounded_button_home"
           android:textColor="#000000"
           android:padding="10dp"
           android:textSize="17dp"
           android:text="Update "/>


       <Button
           android:id="@+id/btnDelete"
           android:layout_marginTop="10dp"
           android:layout_width="100dp"
           android:layout_height="50dp"
           android:layout_marginLeft="50dp"
           android:textAlignment="center"
           android:background="@drawable/rounded_button_home"
           android:textColor="#000000"
           android:padding="10dp"
           android:textSize="17dp"
           android:text="Delete "/>
   </LinearLayout>

</LinearLayout>